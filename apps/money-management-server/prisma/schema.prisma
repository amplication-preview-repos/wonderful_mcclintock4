datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Money {
  amount      Float?
  createdAt   DateTime @default(now())
  currency    String?
  description String?
  id          String   @id @default(cuid())
  updatedAt   DateTime @updatedAt
  user        User?    @relation(fields: [userId], references: [id])
  userId      String?
}

model Expense {
  amount      Float?
  category    String?
  createdAt   DateTime  @default(now())
  date        DateTime?
  description String?
  id          String    @id @default(cuid())
  updatedAt   DateTime  @updatedAt
  user        User?     @relation(fields: [userId], references: [id])
  userId      String?
}

model BankAccount {
  accountNumber String?
  bankName      String?
  createdAt     DateTime @default(now())
  id            String   @id @default(cuid())
  updatedAt     DateTime @updatedAt
  user          User?    @relation(fields: [userId], references: [id])
  userId        String?
}

model Analytics {
  chartType   String?
  createdAt   DateTime @default(now())
  data        Json?
  description String?
  id          String   @id @default(cuid())
  updatedAt   DateTime @updatedAt
  user        User?    @relation(fields: [userId], references: [id])
  userId      String?
}

model User {
  analyticsItems Analytics[]
  bankAccounts   BankAccount[]
  createdAt      DateTime      @default(now())
  email          String?       @unique
  expenses       Expense[]
  firstName      String?
  id             String        @id @default(cuid())
  lastName       String?
  monies         Money[]
  password       String
  roles          Json
  updatedAt      DateTime      @updatedAt
  username       String        @unique
}
